{
  "scripts": {
    "start": "NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "test-server": "NODE_ENV=test ts-node src/index.ts",
    "test": "NODE_ENV=test jest --forceExit",
    "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts",
    "check-update": "ncu -a"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "graphql-import": "^0.7.0",
    "graphql-request": "^1.8.2",
    "graphql-tools": "^3.1.1",
    "graphql-yoga": "^1.16.2",
    "ioredis": "^4.0.0",
    "mongoose": "^5.2.13",
    "node-fetch": "^2.2.0",
    "uuid": "^3.3.2",
    "yup": "^0.26.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/ioredis": "^4.0.1",
    "@types/jest": "^23.3.2",
    "@types/mongoose": "^5.2.11",
    "@types/node": "^10.9.4",
    "@types/node-fetch": "^2.1.2",
    "@types/uuid": "^3.4.4",
    "@types/yup": "^0.24.9",
    "gql2ts": "^1.8.2",
    "jest": "^23.5.0",
    "nodemon": "^1.18.4",
    "npm-check-updates": "^2.14.2",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "jest": {
    "globalSetup": "./src/testSetup/callSetup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
